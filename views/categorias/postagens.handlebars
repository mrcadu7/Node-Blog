<h1>{{categoria.nome}}</h1>
{{#each postagens}}
<div class="card mt-2">
    <div class="card-body">
        <h3>{{this.titulo}}</h3>
        <p>{{this.descricao}}</p>
        <a href="/postagem/{{slug}}"><button class="btn btn-success">Leia mais</button></a>
        <hr>
        <small>Categoria: {{categoria.nome}}</small><br>
        <small>Data de publicação: {{date}}</small>
    </div>
</div>
{{else}}
    <h5>Nenhuma postagem encontrada</h5>
{{/each}}